{
  "name": "wp-accessibility",
  "version": "2.1.14",
  "private": true,
  "description": "WP Accessibility WordPress plug-in.",
  "author": "Joe Dolson",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "accessibility",
    "wordpress"
  ],
  "homepage": "https://www.joedolson.com/wp-accessibility/",
  "repository": "git+https://github.com/joedolson/wp-accessibility.git",
  "bugs": {
    "url": "https://github.com/joedolson/wp-accessibility/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.9.0"
  },
  "devDependencies": {
    "@wordpress/env": "^5.7",
    "jsdoc": "~3.6.3",
    "wp-hookdoc": "^0.2.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.8.4",
    "esbuild": "^0.25.0"
  },
  "scripts": {
    "start": "esbuild a11y.min=src/js/a11y.js wpa-toolbar.min=src/js/wpa-toolbar.js alt.button.min=src/js/alt.button.js longdesc.min=src/js/longdesc.js wp-accessibility.min=src/js/wp-accessibility.js --bundle --outdir=src/js --target=chrome58,firefox57,safari11,edge16 --watch --sourcemap",
    "build:js": "esbuild a11y.min=src/js/a11y.js wpa-toolbar.min=src/js/wpa-toolbar.js alt.button.min=src/js/alt.button.js longdesc.min=src/js/longdesc.js wp-accessibility.min=src/js/wp-accessibility.js --bundle --outdir=src/js --target=chrome58,firefox57,safari11,edge16 --minify",
    "presetup": "find .scripts -type f -exec chmod +x {} \\;",
    "build:docs": "rm -rf docs/ && jsdoc -c hookdoc-conf.json",
    "format-php": "wp-env run composer run-script format",
    "prelint-php": "wp-env run composer 'install --no-interaction'",
    "lint-php": "wp-env run composer run-script lint",
    "pretest-php": "wp-env run composer 'install --no-interaction'",
    "test-php": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/wp-accessibility/phpunit.xml.dist --verbose'",
    "lint-js": "eslint --fix './src/js'",
    "wp-env": "wp-env"
  },
  "lint-staged": {
    "./src/js/!(*min).js": ["eslint --fix", "prettier --write"],
    "./src/css/*.css": "prettier --write"
  },
  "dependencies": {}
}
